@using BusinessObject.Entities
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> signInManager;
@if (!string.IsNullOrEmpty(Context.Session.GetString("EmailAddress")))
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                Welcome @Context.Session.GetString("EmailAddress")
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" >Profile</a></li>
                <li><a class="dropdown-item" asp-page="/Account/Logout">Logout</a></li>
            </ul>
        </li>
    </ul>
}
else
{
    <a class="btn btn-link" asp-page="/Account/LoginPage">Login</a>
    <a class="btn btn-link ml-3" asp-page="/Account/Register">Register</a>
}
