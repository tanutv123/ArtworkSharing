@page
@model ArtistPageModel


<head>
    <title>Artist Profile</title>
    
    <style>
        /* Custom CSS styles */
        .user-detail {
            margin-bottom: 50px; /* Tăng khoảng cách giữa Phần Detail User và Phần Gallery */
        }

        .artwork-image {
            width: 100%; /* Set the width to 100% */
            height: auto; /* Automatically calculate the height to maintain aspect ratio */
            max-width: 1000px; /* Set a maximum width for the images */
        }
    </style>
</head>
<body>  
<div class="container">
    <h1 class="mt-5">Profile</h1>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }
    <div class="row">
        <div class="col-md-8">
            <h3>User Information</h3>
            <p>Username: @Model.appUser.Name</p>
            <p>Phone: @Model.appUser.PhoneNumber</p>
            <p>About You: @Model.appUser.Description</p>
            <p>Email: @Model.appUser.Email</p>
            <!-- Add additional user information as needed -->
        </div>
        <br />

        <div class="row user-detail">
            <div class="col-md-12">
                <h3>Gallery</h3>
                <div class="row">
                    @foreach (var artwork in Model.artworks)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <img src="@artwork.ArtworkImage.Url" alt="@artwork.Title" class="card-img-top artwork-image">
                                <p>@artwork.Title</p>
                            </div>
                            <div class="col-md-5 d-flex justify-content-start" >
                                <a class="btn btn-danger" asp-page="/Artist/ArtworkModify" asp-route-artworkid="@artwork.Id">Delete</a>
                                <a class="btn btn-primary" asp-page="/Artist/ArtworkModify2" asp-route-artworkid="@artwork.Id">Edit</a>
                            </div>
                            
                        </div>
                        
                    }
                </div>
                    <button class="btn btn-success"><a a asp-page="/Artist/ArtistAddArtwork" asp-route-id="@Model.appUser.Id">Create New Artwork</a></button>
                <!-- Add pagination or infinite scroll for larger galleries -->
            </div>
        </div>
        <!-- Add more sections such as activity feed, comments, etc. -->
    </div>
</div>
</body>
