@page "/Account/LoginPage"
@model Presentation.Pages.Account.LoginPageModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppUser.Email" class="control-label">Email Address</label>
                <input asp-for="AppUser.Email" class="form-control" />
                <span asp-validation-for="AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <span><a asp-page="./Register">Register</a> if you dont have any account.</span>
        </div>
        <div>
            <span><a asp-page="./ForgotPassword">Forgot Password</a> if you dont remember your password.</span>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/websignalr/presence.js"></script>
}