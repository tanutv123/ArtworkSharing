@page
@model ArtistCommissionModel
@{
}

@if (Model.Commission != null)
{
	<div class="container">
		<div class="row">
			<h3>Your commission overview:</h3>
		</div>
		<div class="row">
			<div class="card mb-3">
				<img src="" class="card-img-top" alt="">
				<div class="card-body">
					<h5 class="card-title">Specialization: </h5>
					<p class="card-text">@Model.Commission.Description</p>
					<p class="card-text">Target price: @Model.Commission.TargetPrice</p>
					<a href="#" class="btn btn-primary">Edit</a>
				</div>
			</div>
		</div>
	</div>
} 
else
{
	<h3>You do not have any commission to be displayed. Please add your commission if you want to.</h3>
	<p><a href="/artist/addcommission">Click here to add</a></p>
}