            @Html.DisplayNameFor(model => model.AppUserDTO.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUserDTO.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUserDTO.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUserDTO.PhoneNumber)
